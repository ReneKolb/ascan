<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical" >

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/DeviceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/settings_display_device_name"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/DeviceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/DeviceName"
            android:text="@string/settings_display_device_label"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/DeviceUUID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/DeviceLabel"
            android:layout_marginTop="15dp"
            android:text="@string/settings_display_device_uuid" />

        <TextView
            android:id="@+id/DeviceRouter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/DeviceFirmware"
            android:layout_marginTop="15dp"
            android:text="@string/settings_display_device_router" />

        <TextView
            android:id="@+id/DeviceFamilyType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/DeviceUUID"
            android:layout_marginTop="15dp"
            android:text="@string/settings_display_device_familiy_type" />

        <TextView
            android:id="@+id/DeviceType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/DeviceFamilyType"
            android:text="@string/settings_display_device_type" />

        <TextView
            android:id="@+id/DeviceFirmware"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/DeviceType"
            android:layout_marginTop="15dp"
            android:text="@string/settings_display_device_firmware"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/netSettingsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/DeviceRouter"
            android:layout_marginTop="43dp"
            android:text="@string/netSettings_caption"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/interfacesLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/netSettingsLabel"
            android:layout_marginTop="24dp"
            android:text="@string/interfaces_caption" />

        <LinearLayout
            android:id="@+id/settings_display_interfaces_List"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/interfacesLabel"
            android:layout_marginLeft="24dp"
            android:orientation="vertical" >

        </LinearLayout>

        <TextView
            android:id="@+id/default_gateway_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/settings_display_interfaces_List"
            android:layout_marginTop="24dp"
            android:text="@string/DefaultGateway" />

        <TextView
            android:id="@+id/gateway_ipv4_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/default_gateway_label"
            android:layout_marginLeft="24dp"
            android:text="@string/settings_display_gateway_ipv4" />

        <TextView
            android:id="@+id/gateway_ipv6_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/gateway_ipv4_view"
            android:layout_marginLeft="24dp"
            android:text="@string/settings_display_gateway_ipv6" />

        <TextView
            android:id="@+id/services_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/gateway_ipv6_view"
            android:layout_marginTop="15dp"
            android:text="@string/services_label"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <LinearLayout
            android:id="@+id/settings_display_services_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/services_label"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="24dp"
            android:orientation="vertical" >

        </LinearLayout>

    </RelativeLayout>

</ScrollView>