<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/interfaceNameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="36dp"
        android:text="@string/interface_item_interface_name" />

    <TextView
        android:id="@+id/interfaceConfigMethod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/interfaceNameView"
        android:layout_below="@+id/interfaceNameView"
        android:text="@string/interface_item_config_method" />

    <LinearLayout
        android:id="@+id/interface_item_ip_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/interfaceConfigMethod"
        android:layout_below="@+id/interfaceConfigMethod"
        android:layout_marginLeft="10dp"
        android:orientation="vertical" >
    </LinearLayout>

</RelativeLayout>